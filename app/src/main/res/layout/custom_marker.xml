<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/marker_img"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_comment"
        android:backgroundTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/marker_event_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Webinar Pengembangan Karir dan pengembangan mental health"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/marker_img"
        app:layout_constraintStart_toStartOf="@+id/marker_img"
        app:layout_constraintTop_toTopOf="@+id/marker_img" />
</androidx.constraintlayout.widget.ConstraintLayout>