<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.eventmap.EventMapFragment">

    <include
        android:id="@+id/toolbar_event_map"
        layout="@layout/toolbar_event" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/yellow"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_event_map" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_map"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="10dp"
        android:paddingStart="70dp"
        android:paddingEnd="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <FrameLayout
        android:id="@+id/layout_gmaps"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewpager_map" />


</androidx.constraintlayout.widget.ConstraintLayout>