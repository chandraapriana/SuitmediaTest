<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/img_event"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/image4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/img_guest" />

    <TextView
        android:id="@+id/tv_event_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/dummy_title_event"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_event_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_event"
        app:layout_constraintTop_toTopOf="@+id/img_event"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_event_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Sabtu 12 September 2020"
        app:layout_constraintBottom_toBottomOf="@+id/img_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_event"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />


</androidx.constraintlayout.widget.ConstraintLayout>